Algoritmo "areas trapezio,quadrado,triangulo"

Var
   areaQ ,areaTri ,areaTra ,A ,B ,C :real

Inicio
   escreval("Digite a medida A:")
   leia(A)
   escreval("Digite a medida B:")
   leia(B)
   escreval("Digite a medida C:")
   leia(C)
   
   areaQ   <- A^2
   areaTri <- A * B / 2
   areaTra <- (A + B) * C / 2

   escreval
   escreval("Aqui esta a area do quadrado: " ,areaQ:2:4)
   escreval("Aqui esta a area do triangulo retangulo: ",areaTri:2:4)
   escreval("Aqui esta a area do trapÃ©zio: " ,areaTra:2:4)

Fimalgoritmo
